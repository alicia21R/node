extends layout

block content
  //- loader
  .loader_bg
    .loader
      img(src='../images/loading.gif' alt='#')
  // end loader
  // header
  header
    // header inner
    .header
      .container
        .row
          .col-xl-3.col-lg-3.col-md-3.col-sm-3.col.logo_section
            .full
              .center-desk
                .logo
                  a(href='index.html')
                    img(src='../images/logo.png' alt='#')
          .col-xl-9.col-lg-9.col-md-9.col-sm-9
            nav.navigation.navbar.navbar-expand-md.navbar-dark
              button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarsExample04' aria-controls='navbarsExample04' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
              #navbarsExample04.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                  li.nav-item
                    a.nav-link(href='../index/index.html')  HOME 
                  li.nav-item
                    a.nav-link(href='../services/services.html') SERVICES
                  li.nav-item
                    a.nav-link(href='../faqs/FAQs.html') ABOUT
                .sign_btn
                  a(href='../loginform/login.html') SIGN IN
  // end header inner
  // end header
  // banner
  section.banner_main
    .container
      .row.d_flex
        .col-md-12
          .text-bg
            h1 ZAWASH
            strong ZAABU WASHING BAY 
            span  found along Mawanda road kampala
            p
              | open during week days from 9:00am-7:00pm and on weekend, from 8:00am-7:00pm
              head
            a(href='../services/services.html') Read More
  // end banner
  // car
  .car
    .container
      .row
        .col-md-12
          .titlepage
            h2 OUR SERVICES 
            span Give your vehicle a good clean on the go!
      .row
        .col-md-4.padding_leri
          .car_box
            figure
              img(src='../images/car_img1.png' alt='#')
            h3 SMALL CARS
        .col-md-4.padding_leri
          .car_box
            figure
              img(src='../images/car_img2.png' alt='#')
            h3 FULL WASH
        .col-md-4.padding_leri
          .car_box
            figure
              img(src='../images/car_img3.png' alt='#')
            h3 ENGINE
  // end car
  // bestCar
  #contact.bestCar
    .container
      .row
        .col-md-12
      .row
        .col-sm-12
          .row
            .col-md-6.offset-md-6
              form.main_form
                .titlepage
                  h2 BOOK A CAR WASH WITH US
                .row
                  .col-md-12
                    select
                      option(value='0') Choose Car Wash Package
                      option(value='1') FULL WASH
                      option(value='2') ENGINE
                      option(value='3') EXTERIOR ONLY
                  .col-md-12
                    select
                      option(value='0') Choose Car Type 
                      option(value='1') SMALL CAR
                      option(value='2') MEDIUM SIZE
                      option(value='3') LARGE
                      option(value='4') OTHER
                  .col-md-12
                    select
                      option(value='0') PAYMENT
                      option(value='1') AIRTEL MONEY
                      option(value='2') MTN MOMO
                      option(value='3') CASH
                  .col-md-12
                    input.contactus(placeholder='ENTER YOUR CONTACT INFORMATION' type='tel' name='Search')
                  .col-sm-12
                    button.find_btn(href='') BOOK NOW!
  // end
  // choose  section
  .choose
    .container
      .row
        .col-md-12
          .titlepage
            h2 ABOUT US
            span
              | Zaabu Washing Bay (ZaWash), is located along Mawanda road, kampala
              br
              |  It is open during week days from 9:00am-7:00pm and on weekend, from 8:00am-7:00pm
      .row
        .col-md-12
          .choose_box
            span &gt;
            p We employ youth in the areas of kalerwe, katanga and among others. 
        .col-md-12
          .choose_box
            span &gt;
            p We are looking forward to  hearing from you 
  // end  section
  // footer
  hr
  footer
    .footer
      .container
        .row
          .col-md-12
            .cont_call
              h3
                strong.multi.color_chang  CONTACT US ON
                br
                |                              (+256) 712345689
            .cont
              .choose_box
                h4
                  strong.multi  Follow us on our social media
                span
                  img(src='./facebook-e14b50ed4aca3144e275..svg' alt='facebook')
                span
                  img(src='./twitter-0bbc0e003ac1f36cd2ef..svg' alt='twitter' href='#')
    .copyright
      .container
        .row
          .col-md-12
            p
              | &copy; 2021 ZAABU WASHING LIMITED All Rights Reserved. Design by 
              a(href='#')  shesintech
